			<li><label class="filter__label"><input type="checkbox">SWISS</label></li>
			<li><label class="filter__label"><input type="checkbox">United</label></li>
		</ul>
	</div>

	<div class="container--medium right">
		<div class="user-selection">

			<div class="column column__1">
				<label>From</label>
	      		<input class="text--chosen" type="text" name="from" placeholder="Chicago ORD">
	      <label>Departing</label>
	       	<input type="date" name="date" required placeholder="11/19/2016">
			</div>

			<div class="column column__2">
       	<label>To</label>
      		<input class="text--chosen" type="text" name="fname" placeholder="Amsterdam ORS">
				<label>Returning</label>
	       	<input type="date" name="date" required placeholder="11/29/2016">
	    </div>

			<div class="column column__3">
				<label>Adults</label>
				<select name="Adults">
					<option value="more filters selected">1 Adults</option>
				  <option value="volvo">2 Adults</option>
				  <option value="saab">3 Adults</option>
				  <option value="fiat">4 Adults</option>
				</select>
				
				<label>Kids</label>
				<select name="Kids">
					<option value="more filters selected">0 Kids</option>
				  <option value="volvo">2 Kids</option>
				  <option value="saab">3 Kids</option>
				  <option value="fiat">4 Kids</option>
				</select>
			</div>

			<div class="column column__4">
				<label>Cabin</label>
				<select class="margin-bottom" name="Cabin">
					<option value="more filters selected">Economy</option>
				  <option value="volvo">Premium Economy</option>
				  <option value="saab">Business</option>
				  <option value="fiat">First Class</option>
				</select>
			
				<input type="button" value="Update" class="button button--secondary" onclick="location.href='/flight-results.html';">
			</div>
		</div>
	</div>

	<div class="container--medium card-result right">
	
		<div class="card-container">
			<div class="card-row">
				<p class="card-row__main"><strong>9:55am ORD - 11:59 AMS</strong></p>
				<p class="card-row__detail">8h 04m</p>
				<p class="card-row__detail"><strong>1 stop</strong></p>
				<p class="card-row__detail">TXL 45 min</p>
				<p class="card-row__detail">Royal Dutch Airlines</p>
			</div>

			<div class="card-column right">
				<h2 class="card-column__price"><strong>$955</strong></h2>
				<p class="card-column__type">Economy</p>
				<p class="card-column__detail"><strong>includes tax &amp; all fees</strong></p>
				<input type="button" value="Book" class="button button--main" onclick="location.href='/flight-results.html';">
			</div>
			<div class="card-row">
				<p class="card-row__main"><strong>6:59am AMS - 7:33 ORD</strong></p>
				<p class="card-row__detail">9h 34m</p>
				<p class="card-row__detail"><strong>1 stop</strong></p>
				<p class="card-row__detail">TXL 45 min</p>
				<p class="card-row__detail">British Airways</p>

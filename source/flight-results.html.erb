title: Wanderlust
layout: layout
---

<%= partial "partials/nav" %>

<div class="container margin-top">

	<div class="container--narrow filter show-large">
		<input type="button" value="Create price alert" class="button button--tertiary left" onclick="location.href='/flight-results.html';">
			
		<ul class="filter__title"><strong>Price</strong>
			<div class="filter__range-values">
				<li><p class="filter__label left">$955</p></li>
				<li><p class="filter__label right">$1944</p></li>
			</div>
			<input type="range" value=0><input type="range" value=100>
		</ul>

		<ul class="filter__title"><strong>Stops</strong>
			<li><label class="filter__label"><input type="checkbox">nonstop</label></li>
			<li><label class="filter__label"><input type="checkbox">1 stop</label></li>
			<li><label class="filter__label"><input type="checkbox">2+ stops</label></li>
		</ul>

		<ul class="filter__title"><p><strong>Times</strong></p>
			<li><p class="filter__subtitle">Take-off: Chicago</p></li>
			<li><p class="filter__label">Friday 5:30am - 10:00pm</p></li>
			<li><input type="range" value=0><input type="range" value=100></li>
		
			<li><p class="filter__subtitle">Take-off: Amsterdam</p></li>
			<li><p class="filter__label">Friday 5:30am - 10:00pm</p></li>
			<li><input type="range" value=0><input type="range" value=100></li>

			<li><p class="filter__subtitle">Show landing times</p></li>
		</ul>

		<ul class="filter__title"><strong>Airports</strong>
			<ul class="filter__subtitle"><p><strong>Chicago</strong></p>
				<li><label class="filter__label"><input type="checkbox">ORD: O'Hare International</label></li>
				<li><label class="filter__label"><input type="checkbox">MDW: Midway</label></li>
			</ul>
			<ul class="filter__subtitle"><p><strong>Amsterdam</strong></p>
				<li><label class="filter__label"><input type="checkbox">AMS: Schiphol Airport</label></li>
			</ul>
		</ul>

		<ul class="filter__title"><strong>Airlines</strong>
			<li><label class="filter__label"><input type="checkbox">Aer Lingus</label></li>
			<li><label class="filter__label"><input type="checkbox">Aeromexico</label></li>
			<li><label class="filter__label"><input type="checkbox">Air Canada</label></li>
			<li><label class="filter__label"><input type="checkbox">Air Europe</label></li>
			<li><label class="filter__label"><input type="checkbox">Air France</label></li>
			<li><label class="filter__label"><input type="checkbox">Air India</label></li>
			<li><label class="filter__label"><input type="checkbox">Alitalia</label></li>
			<li><label class="filter__label"><input type="checkbox">American Airlines</label></li>
			<li><label class="filter__label"><input type="checkbox">ANA</label></li>
			<li><label class="filter__label"><input type="checkbox">Australian Airlines</label></li>
			<li><label class="filter__label"><input type="checkbox">British Airways</label></li>
			<li><label class="filter__label"><input type="checkbox">Cathay Pacific</label></li>
			<li><label class="filter__label"><input type="checkbox">Copa Airlines</label></li>
			<li><label class="filter__label"><input type="checkbox">Delta</label></li>
			<li><label class="filter__label"><input type="checkbox">Emirates</label></li>
			<li><label class="filter__label"><input type="checkbox">EtihadAirways</label></li>
			<li><label class="filter__label"><input type="checkbox">EVA Air</label></li>
			<li><label class="filter__label"><input type="checkbox">Finnair</label></li>
			<li><label class="filter__label"><input type="checkbox">Iberia</label></li>
			<li><label class="filter__label"><input type="checkbox">Jet Airways</label></li>
			<li><label class="filter__label"><input type="checkbox">KLM</label></li>

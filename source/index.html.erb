---
title: Wanderlust
layout: layout
---
<header class="hero">	

<section class="nav--secondary">
	<div class="container">
		<ul class="half-to-third--large left">
			<li><img class="logo" src="../images/logo.svg"></li>
			<li><span class="icon__text" href="/index.html">Wanderlust</span></li>
		</ul>

		<div class="nav-list clean-list right">
			<p class="nav-single__link"><a class="clean-link" href="#">Welcome, Eva</a></p>
		</div>
	</div>
</section>


<h1 class="prioritized-text">Discover your inner explorer</h1>  

<section class="container form-table">
  
  <input id="tab1" type="radio" name="tabs" checked>
  <label for="tab1" class="form-table__meta-label">Flights</label>
    
  <input id="tab2" type="radio" name="tabs">
  <label for="tab2" class="form-table__meta-label">Lodging</label>
    
  <input id="tab3" type="radio" name="tabs">
  <label for="tab3" class="form-table__meta-label">Cars</label>

	<section class="form-table__content" id="content1">
  	<div class="tab-content"> 
   		<ul class="form-table__additional-options">
       	<li><a href="#">round trip</a></li>
       	<li><a href="#">one-way</a></li>
       	<li><a href="#">multi-city</a></li>   
    	</ul>

      <section class="form-table__inputs">
      	<div class="row">
      		<div class="full-to-half">
      			<label>flying from</label>	 
         			<input type="text" name="flying from" placeholder="city or airport">
         	</div>
         	<div class="full-to-half right">
        		<label>flying to</label> 
         			<input type="text" name="flying to" placeholder="city or airport">
         	</div>
      	</div>
         
      	<div class="row">
      		<div class="full-to-half">
         		<label>departing</label>
         			<input type="text" id="datepickera" required placeholder="select date">
          </div>
          <div class="full-to-half right">
         		<label>returning</label>
         			<input type="text" id="datepickerb" requried placeholder="select date">
					</div>
				</div>

				<div class="row">
					<div class="full-to-half">
						<label>Adults</label>
	         		<select>
								<option value="1">1</option>
								<option value="0">0</option>
								<option value="2">2</option>
								<option value="1">3</option>
								<option value="2">4</option>
	         		</select>
         	</div>
					<div class="full-to-half right">
	         	<label>Children</label>
	         		<select>
								<option value="0">0</option>
								<option value="1">1</option>
								<option value="2">2</option>
								<option value="3">3</option>
								<option value="4">4</option>
	         		</select>
         	</div>
      	</div>	
     	</section>
  	</div>
  <input type="button" value="SEARCH" class="button button--main block" onclick="location.href='/flight-results.html';">
</section>
  
<section class="form-table__content" id="content2">    
<div class="tab-content"> 
  <section class="form-table__inputs">
  	<div class="row">
  		<div class="full-to-half">
    		<label>location</label>
    		<input type="text" name="location" placeholder="city, hotel or airbnb name">
    	</div>
    	<div class="full-to-half right">
        <label>rooms</label>
          <label>
            <select>
              <option selected value="1">1</option>
              <option value="2">2</option>
              <option value="3">3</option>
              <option value="4">4</option>
              <option value="5">5</option>
              <option value="6">6</option>
            </select>
          </label>
     	</div>
    </div>

    <div class="row">
    	<div class="full-to-half">          		
     		<label>check-in</label>
     		<input type="text" id="datepickere" requried placeholder="select date">
     	</div>
     	<div class="full-to-half right">           		
     		<label>check-out</label>
     		<input type="text" id="datepickerf" requried placeholder="select date">
     	</div>
		</div>

		<div class="row">
			<div class="full-to-half">
        <label>adults</label>
          <label>
            <select>
              <option selected value="1">1</option>
              <option value="2">2</option>
              <option value="3">3</option>
              <option value="4">4</option>
            </select>
        	</label>
      </div>
     
     	<div class="full-to-half right">
       <label>children</label>
          <label>
            <select>
              <option selected value="0">0</option>
              <option value="1">1</option>
              <option value="2">2</option>
              <option value="3">3</option>
              <option value="4">4</option>
            </select>
          </label> 
    	</div>    
  	</div>
  </section>
  </div>
  <input type="button" value="SEARCH" class="button button--main block" onclick="location.href='/lodging-results.html';">
</section>

<section class="form-table__content" id="content3">    
	<div class="tab-content"> 
		<section class="form-table__inputs">
			<div class="row">
				<div class="full-to-half">
    			<label>car pick up</label>
     			<input type="text" name="pick-up location" placeholder="city, zipcode or airport">
     		</div>
     		<div class="full-to-half right">
     			<label>car drop off</label>
     			<input type="text" name="drop-off location" placeholder="city, zipcode or airport">
     		</div>
			</div>
			<div class="row">
				<div class="full-to-half">
     			<label>pick up day</label>
     			<input type="text" id="datepickerc" requried placeholder="select date"> 
				</div>
				<div class="full-to-half right">
      		<label>pick up time</label>
      			<label>
			        <select>
				        <option selected value="12:00pm">12:00pm</option>>
				        <option value="1:00pm">1:00pm</option>
				        <option value="2:00pm">2:00pm</option>
				        <option value="3:00pm">3:00pm</option>
				        <option value="4:00pm">4:00pm</option>
				        <option value="5:00pm">5:00pm</option>
			        </select>
			      </label>
     		</div>
     	</div>
			<div class="row">
				<div class="full-to-half">
     			<label>drop off day</label>
     			<input type="text" id="datepickerd" requried placeholder="select date">
				</div>
				<div class="full-to-half right">
			    <label>drop off time</label>
			      <label>
			        <select>
			          <option selected value="12:00pm">12:00pm</option>
			          <option value="1:00pm">1:00pm</option>
			          <option value="2:00pm">2:00pm</option>
			          <option value="3:00pm">3:00pm</option>
			          <option value="4:00pm">4:00pm</option>
			          <option value="5:00pm">5:00pm</option>
			        </select>
			      </label>
      	</div>
      </div>
			<div class="row">
				<div class="full-to-half">
		      <label>vehicle type</label>
		      	<label>
			        <select>
			          <option selected value="economy">economy</option>
			          <option value="compact">compact</option>
			          <option value="fullsize">fullsize</option>
			          <option value="premium">premium</option>
			          <option value="luxury">luxury</option>
			          <option value="convertible">convertible</option>
			          <option value="minivan">minivan</option>
			          <option value="SUV">sports utility vehicle</option>
			          <option value="no preference">no preference</option>
			        </select>
		      </label>
		    </div>
     		<div class="full-to-half right">
		      <label>company</label>
		      <label>
		        <select>
		          <option selected value="no preference">no preference</option>
		          <option value="Avis">Avis</option>
		          <option value="Budget">Budget</option>
		          <option value="Enterprise">Enterprise</option>
		          <option value="Hertz">Hertz</option>
		          <option value="Thifty">Thrifty</option>
		        </select>
		      </label>
      	</div>
  		</div>
  </section>
	</div>
  <input type="button" value="SEARCH" class="button button--main block" onclick="location.href='/car-results.html';">
</section>
</section>
</header>


<%= partial "partials/footer" %>
</section>

<script src="/javascripts/pikaday.js"></script>
<script>
new Pikaday({ field: document.getElementById('datepickera') });
new Pikaday({ field: document.getElementById('datepickerb') });
new Pikaday({ field: document.getElementById('datepickerc') });
new Pikaday({ field: document.getElementById('datepickerd') });
new Pikaday({ field: document.getElementById('datepickere') });
new Pikaday({ field: document.getElementById('datepickerf') });
